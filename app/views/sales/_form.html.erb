<%= form_with model: @sale, local: true do |f| %>
      <%= f.label :detail, "Detalle" %>
      <%= f.text_area :detail %>
      <%= f.label :category, "Categoria" %>
      <%= f.text_field :category %>
      <%= f.label :value, "Valor venta" %>
      <%= f.number_field :value %>
      <%= f.label :discount, "Valor descuento" %>
      <%= f.number_field :discount %>
      <%= f.label :tax, "Exento de IVA" %>
      <%= f.check_box :tax %>
      <%= f.submit "Enviar" %>
<% end %>